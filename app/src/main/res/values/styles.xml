<resources>

    <!-- Base application theme. -->
    <style name="Tiramisu" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Tiramisu.RecipeTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/recipe_title_text_size</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">normal|bold</item>
        <item name="android:layout_marginBottom">@dimen/recipe_item_margin</item>
        <item name="android:layout_marginTop">@dimen/recipe_item_margin</item>
    </style>
</resources>
